<div class="DV-header">
  <div class="DV-headerHat" class="DV-clearfix">
    <div class="DV-branding">
      <% if (story_url) { %>
        <span class="DV-storyLink"><%= story_url %></span>
      <% } %>
    </div>
    <div class="DV-title">
      <%= title %>
    </div>
  </div>

  <div class="DV-controls">
    
    <div class="DV-views">
      <div class="DV-documentView"><span class="DV-trigger DV-selected">Dokument</span></div>
      <div class="DV-thumbnailsView"><span class="DV-trigger">Seiten</span></div>
      <div style="display:none;" class="DV-annotationView"><span class="DV-trigger">Anmerkungen</span></div>
      <div class="DV-textView DV-last"><span class="DV-trigger">Texte</span></div>
    </div>

    <div class="DV-collapsibleControls">

      <div class="DV-views DV-right">
        <div class="DV-vollBild DV-first"><span class="DV-trigger">Vollbild</span></div>
        <div class="DV-pdfDownload"><span class="DV-trigger">Herunterladen</span></div>
      </div>
      
      <div class="DV-zoomControls">
        <span class="DV-zoomLabel">Zoom</span>
        <div class="DV-zoomBox"></div>
      </div>
      
    </div>
    
  </div>

</div>